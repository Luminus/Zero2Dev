<br>
<div class="well">
  <div class="row">
    <div class="col-md-5">
      <h3 class="pull-right"><%= link_to @project.user.name, user_path(@project.user)%></h3>
    </div>
    <div class="col-md-2">
      <div class="text-center">
        <div class=" img-thumbnail">
          <%= link_to user_path(@project.user) do%>
            <%= gravatar_for(@project.user, 60) %>
          <%end%>
        </div>
      </div>
    </div>
    <% if current_user == @project.user%>
      <div class="col-md-5">
        <div class="pull-right">
          <%= link_to "EDIT", edit_project_path(@project), class: "btn btn-xs btn-warning"%>
          <%= link_to "DELETE", project_path(@project), method: :delete, class: "btn btn-xs btn-danger"%>
        </div>
      </div>
    <%end%>
  </div>
  <div class="row">
    <div class="text-center">
      <h3><%= @project.title%></h3>
    </div>
  </div>
  <br>

  <div class="row">
    <div class="col-md-6">
      <p><%= @project.content%></p>
      <hr>
      <h4>
        <%= fa_icon "home", class: "fa-fw text-muted pull-left" %>
        <%= link_to @project.website, @project.website %>
        <br>
        <br>
        <%= fa_icon "github", class: "fa-fw text-muted pull-left" %>
        <%= link_to @project.repository, @project.repository %>
      </h4>

    </div>
    <div class="col-md-6">
      <!-- using bxslider gem for slider -->
      <ul class="bxslider">
        <% @pictures.each do |picture|%>
          <li><%= image_tag picture.image.url %></li>
        <%end%>
      </ul>

      <div id="bx-pager">
        <% @pictures.each_with_index do |picture, index|%>
          <div class="col-md-3">
            <div class="thumbnail">
              <a data-slide-index="<%= index %>" href="" class=><%= image_tag picture.image.url %></a>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>




</div>
