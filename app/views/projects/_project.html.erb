<!-- assign each div an ID -->
<div class="col-xs-12" id="<%= dom_id(project) %>">




  <div class="panel panel-default">



    <div class="panel-heading">
      <div class="row">

        <div class=" col-md-4">
          <small class='text-center text-muted'>by <%= link_to project.user.name, user_path(project.user)%>, <%= time_ago_in_words(project.updated_at) %> ago</small>
          <h3 class=""><%=link_to project.title, project_path(project)%></h3>
        </div>

        <div class="col-md-8">
          <!-- 'project_thumbnails' method defined in Project Model -->
          <% project.project_thumbnails.each do |picture| %>

              <div class="img-thumbnail pull-right" >
                <%= link_to project_path(project) do %>
                  <%= image_tag picture.image.url, height: "80px" %>
                <%end%>
              </div>
          <%end%>
        </div>

      </div>
    </div>

    <div class="panel-body">
      <div class="row">

          <div class="col-xs-1">
              <div class="thumbnail">
                <%= link_to user_path(project.user) do %>
                  <%= gravatar_for(project.user, 60) %>
                <%end%>
              </div>
          </div>

          <div class="col-xs-11 content_preview panel-body text-muted">
            <small><%= convert_to_markdown(project.content) %></small>
          </div>

          <div class="clearfix"> </div>
          <div class="col-xs-2 pull-right">
            <%= link_to "READ MORE", project_path(project),
                class: "btn btn-block btn-xs btn-primary read_more_button" %>

          </div>
      </div>

    </div>

    <div class="panel-footer">
      <%= render 'technologies/technology_list', post: project %>
    </div>

  </div>
</div>
