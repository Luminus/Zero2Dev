<h1>Resources#index</h1>
<p>Find me in app/views/resources/index.html.erb</p>

<a href=<%= new_resource_path %> class="btn btn-primary">New Post</a><br>

<% @resources.each do |post| %>
  Posted by: <%= post.user_id ? User.find(post.user_id).name : 'no user' %><br>
  Title: <%= post.title %><br>
  Content: <%= post.content %><br><br>
<% end %>
