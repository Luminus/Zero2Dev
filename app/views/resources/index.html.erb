<h1>Resources#index</h1>
<p>Find me in app/views/resources/index.html.erb</p>

<a href=<%= new_resource_path %> class="btn btn-primary">New Post</a><br>

<% @resources.each do |resource| %>
  <%= resource.user_id ? User.find(resource.user_id).name : 'no user' %><br>
  <%= resource.content %><br><br>
  <%= link_to 'View Full Post', "/resources/#{resource.id}" %>
<% end %>
